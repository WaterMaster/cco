<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.buaa.mooc.entity.Course" lazy="false" table="course">
        <id name="cid" type="integer" column="cid">
            <generator class="native"/>
        </id>
        <property name="cname" type="string" column="cname"/>
        <property name="termId" type="integer" column="term_id"/>
        <property name="credit" type="integer" column="credit"/>
        <property name="beginDate" type="date" column="begin_date"/>
        <property name="endDate" type="date" column="end_date"/>
        <property name="address" type="string" column="address"/>
        <property name="outline" type="string" column="outline"/>
        <property name="fid" type="integer" column="fid"/>
    </class>
</hibernate-mapping>  